<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Invisible Fiction</title>
    @Styles.Render("~/Content/css")
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    @Html.Partial("~/Views/Partial_ProgressBar.cshtml")
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="index3.html" class="brand-link">
                <img src="~/Content/Theme/img/AdminLTELogo.png" alt="Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">Admin</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        @*<img src="dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">*@
                    </div>
                    <div class="info">

                        @if (Session["DisplayName"] != null)
                        {
                            <a href="#" class="d-block">
                                @Session["DisplayName"]
                            </a>
                            <span style="color: #c2c7d0;font-size: 13px;"><b>Last LogedIn:</b> @Session["LastLogged"]</span>
                        }
                    </div>
                </div>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                        with font-awesome or any other icon font library -->
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Home")" class="nav-link" id="liHome">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Dashboard
                                </p>
                            </a>
                        </li>

                        @if (Session["LoginTypeCode"] != null && Convert.ToInt32(Session["LoginTypeCode"]) != Convert.ToInt32(Ornaments.BusinessObjects.Enum.LoginTypeCode.BRNACH_USER))
                        {
                            <li class="nav-item">
                                <a id="liCompany" onclick="Javascript:ShowProgressBar();" href="@Url.Action("Index", "Company")" class="nav-link">
                                    <i class="nav-icon fas fa-th"></i>
                                    <p>
                                        Company
                                    </p>
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a id="liBranch" onclick="Javascript:ShowProgressBar();" href="@Url.Action("Index", "Branch")" class="nav-link">
                                <i class="nav-icon fas fa-copy"></i>
                                <p>
                                    Branch
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a id="liCategory" onclick="Javascript:ShowProgressBar();" href="@Url.Action("Index", "Category")" class="nav-link">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>
                                    Category Master
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a id="liOrnamentsPosition" onclick="Javascript:ShowProgressBar();" href="@Url.Action("Index", "OrnamentsPosition")" class="nav-link">
                                <i class="nav-icon fas fa-table"></i>
                                <p>
                                    Position Master
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a id="liOrnaments" onclick="Javascript:ShowProgressBar();" href="@Url.Action("Index", "Ornaments")" class="nav-link">
                                <i class="nav-icon fas fa-table"></i>
                                <p>
                                    Ornaments Master
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a id="liLogout" onclick="Javascript:ShowProgressBar();" href="@Url.Action("Logout", "Account")" class="nav-link">
                                <i class="nav-icon fas fa-table"></i>
                                <p>
                                    Logout
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            @{ var prev_year = (DateTime.Now.Year) - 1; }
            <strong>Copyright &copy; @prev_year - @DateTime.Now.Year <a href="https://adminlte.io">Invisible Fiction</a>.</strong>
            All rights reserved.

            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 1.1.0
            </div>
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)

    @*@Scripts.Render("~/bundles/bootstrap")*@
    @Scripts.Render("~/bundles/theme")
    @*<script>$.widget.bridge('uibutton', $.ui.button)</script>*@
</body>
</html>
<!-- ./wrapper -->