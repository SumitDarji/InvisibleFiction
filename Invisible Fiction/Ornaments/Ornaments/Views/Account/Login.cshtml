@{
    Layout = null;
}

@model Ornaments.Models.LoginModel
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin | Log in</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/Theme/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/Content/Theme/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/Theme/css/adminlte.min.css">
    <link rel="stylesheet" href="~/Content/Theme/custom-style.css" />
</head>
<body class="hold-transition login-page">
    @Html.Partial("~/Views/Partial_ProgressBar.cshtml")
    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>Admin</a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Sign in to start your session</p>
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", @id = "LoginForm" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    if (!String.IsNullOrEmpty(@ViewBag.ErrorMsg))
                    {
                        <div class="error-msg">
                            @ViewBag.ErrorMsg
                        </div>
                        <br />
                    }
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(model => model.Username, new { @placeholder = "Email/Username", @class = "form-control", @maxlength = "20" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.Username)
                    </div>
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(model => model.Password, new { @placeholder = "Password", @class = "form-control", @maxlength = "16", @type = "password" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <a onclick="Javascript:ShowProgressBar();" href="@Url.Action("Forgot", "Account")">I forgot my password</a>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button class="btn btn-primary btn-block" onclick="Javascript:jsFormValidate('LoginForm');">Sign In</button>
                        </div>
                        <!-- /.col -->
                    </div>
                }
                <!-- /.social-auth-links -->

            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/account")
</body>
</html>